<Window x:Class="GuiClient.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:GuiClient.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="950" Style="{StaticResource WinAll}">
    <Grid>
        <uc:AuthUserControl HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" />
        <ScrollViewer Margin="10,34,0,16">
            <StackPanel>
                <uc:WorkerUserControl VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed" />
                <uc:AdminUserControl VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed" />
                <uc:OwnerUserControl VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>