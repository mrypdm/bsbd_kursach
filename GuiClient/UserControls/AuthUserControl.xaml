<UserControl x:Class="GuiClient.UserControls.AuthUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GuiClient.UserControls"
             xmlns:vm="clr-namespace:GuiClient.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{ d:DesignInstance Type=vm:AuthViewModel, IsDesignTimeCreatable=True }"
             d:DesignHeight="25" d:DesignWidth="390">

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding UserText}" Style="{StaticResource RowControl}" TextAlignment="Center" />
        <Button Content="{Binding AuthButtonText}" Style="{StaticResource RowControl}" Command="{Binding Authenticate}" />
        <Button Content="Change password" IsEnabled="{Binding ChangePasswordButtonEnabled}"
                Style="{StaticResource RowControl}" Command="{Binding ChangePassword}" />
    </StackPanel>
</UserControl>