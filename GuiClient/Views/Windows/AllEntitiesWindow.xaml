<Window x:Class="GuiClient.Views.Windows.AllEntitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:abstractions="clr-namespace:GuiClient.ViewModels.Abstraction"
        mc:Ignorable="d"
        d:DataContext="{ d:DesignInstance Type={x:Type abstractions:AllEntitiesWindowViewModel`2}, IsDesignTimeCreatable=True }"
        Title="{Binding WindowTitle}" MinHeight="300" Style="{StaticResource WinAll}"
        SizeToContent="Width">
    <StackPanel Margin="5">
        <Button Content="Refresh" Command="{Binding Refresh}" Margin="0,0,0,5" />
        <Button Content="Add" Command="{Binding Update}" Margin="0,5,0,0" />
        <Separator Height="5" Foreground="Black" />
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" ItemsSource="{Binding Entities}" IsReadOnly="True" />
    </StackPanel>
</Window>