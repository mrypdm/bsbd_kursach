<Window x:Class="GuiClient.Views.Windows.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:GuiClient.ViewModels.Windows"
        mc:Ignorable="d"
        d:DataContext="{ d:DesignInstance Type=vm:BookWindowViewModel, IsDesignTimeCreatable=True }"
        Title="{Binding WindowTitle}" d:Height="450" MinWidth="300" Style="{StaticResource WinAll}"
        SizeToContent="WidthAndHeight">
    <DockPanel Margin="5" LastChildFill="False">
        <TextBlock Text="Title" DockPanel.Dock="Top" />
        <TextBox Text="{Binding Title}" DockPanel.Dock="Top" />

        <TextBlock Text="Author" DockPanel.Dock="Top" />
        <TextBox Text="{Binding Author}" DockPanel.Dock="Top" />

        <TextBlock Text="Release date" DockPanel.Dock="Top" />
        <DatePicker SelectedDate="{Binding ReleaseDate}" DockPanel.Dock="Top" />

        <TextBlock Text="Count" DockPanel.Dock="Top" />
        <TextBox Text="{Binding Count}" DockPanel.Dock="Top" />

        <TextBlock Text="Price" DockPanel.Dock="Top" />
        <TextBox Text="{Binding Price}" DockPanel.Dock="Top" />

        <Button Content="Save" DockPanel.Dock="Top" Margin="0,5,0,5" Command="{Binding Save}" />
    </DockPanel>
</Window>