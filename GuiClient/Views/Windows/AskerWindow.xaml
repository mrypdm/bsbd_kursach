        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Asker" SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock x:Name="MessageBlock" Text="Placeholder" MinWidth="150" Margin="5" />
        <TextBox x:Name="ValueBox" MinWidth="150" Margin="5" />
