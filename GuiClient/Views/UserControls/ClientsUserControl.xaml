<UserControl x:Class="GuiClient.Views.UserControls.ClientsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:GuiClient.ViewModels.UserControls"
             mc:Ignorable="d"
             d:DataContext="{ d:DesignInstance Type=vm:ClientsUserControlViewModel, IsDesignTimeCreatable=True }"
             d:DesignHeight="50">
    <StackPanel Orientation="Horizontal">
        <Button Content="Add Client" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Delete Client" Style="{StaticResource RowControl}" Visibility="{Binding IsAdmin}" />
        <Button Content="Get all Clients" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Client by ID" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Client by Name" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Client by Phone" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
    </StackPanel>
</UserControl>