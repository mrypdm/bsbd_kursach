<UserControl x:Class="GuiClient.Views.UserControls.BooksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:GuiClient.ViewModels.UserControls"
             mc:Ignorable="d"
             d:DataContext="{ d:DesignInstance Type=vm:BooksUserControlViewModel, IsDesignTimeCreatable=True }"
             d:DesignHeight="50" d:DesignWidth="1000">
    <StackPanel Orientation="Horizontal">
        <Button Content="Add Book" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Delete Book" Style="{StaticResource RowControl}" Visibility="{Binding IsAdmin}" />
        <Button Content="Get Book by ID" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Books by Title" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Books by Author" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Books by Tags" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
        <Button Content="Get Books with Count" Style="{StaticResource RowControl}" Visibility="{Binding IsWorker}" />
    </StackPanel>
</UserControl>